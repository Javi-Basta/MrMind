<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/botonEnviar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/botonUnJugador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/botonDosJugadores"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/botonDosJugadores"
        android:layout_marginTop="200dp"
        android:background="@android:color/holo_green_dark"
        android:paddingLeft="25pt"
        android:paddingRight="25pt"
        android:text="Un jugador"
        android:textColor="@android:color/holo_green_light"
        android:textSize="14pt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/botonDosJugadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botonUnJugador1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_green_dark"
        android:paddingLeft="25pt"
        android:paddingRight="25pt"
        android:text="Dos jugadores"
        android:textColor="@android:color/holo_green_light"
        android:textSize="14pt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/botonRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/botonDosJugadores"
        android:layout_alignRight="@+id/botonDosJugadores"
        android:layout_below="@+id/botonDosJugadores"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_green_dark"
        android:paddingLeft="25pt"
        android:paddingRight="25pt"
        android:text="Ranking"
        android:textColor="@android:color/holo_green_light"
        android:textSize="14pt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/botonVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/botonRanking"
        android:layout_alignRight="@+id/botonRanking"
        android:layout_below="@+id/botonRanking"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_green_dark"
        android:paddingLeft="25pt"
        android:paddingRight="25pt"
        android:text="Instrucciones"
        android:textColor="@android:color/holo_green_light"
        android:textSize="14pt"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80pt"
        android:layout_height="80pt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher2" />

</RelativeLayout>
